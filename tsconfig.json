{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ES2019",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@sosuisen/nodegit": [
        "types/sosuisen__nodegit"
      ],
      "*": [
        "node_modules/*"
      ],
    },
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "test/**/*",
    "examples/**/*"
  ]
}