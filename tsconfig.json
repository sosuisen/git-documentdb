{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ES2019",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
     "src/**/*test.ts"
  ]
}