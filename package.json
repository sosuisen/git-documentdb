{
  "name": "git-documentdb",
  "version": "0.1.0",
  "description": "Offline-first DocumentDB using Git",
  "main": "dist/main.js",
  "typing": "dist/main.d.ts",
  "scripts": {
    "build": "rm -rf dist/* && npm run lint && tsc",
    "test": "npm run lint && jest",
    "doc": "npm run build && npm run api-extractor",
    "prepare": "npm run build && npm run test && npm run api-extractor && npm run crlf",
    "prepublishOnly": "",    
    "api-extractor" : "npx api-extractor run --local --verbose && npx api-documenter markdown -i ./temp -o ./docs",
    "lint": "eslint --fix --ext .ts",
    "crlf": "npx crlf --set=LF docs/* etc/* "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sosuisen/git-documentdb.git"
  },
  "keywords": [
    "Git",
    "GitHub",
    "PouchDB",
    "Offline-first",
    "DocumentDB"
  ],
  "author": "Hidekazu Kubota",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/sosuisen/gitsync-db/issues"
  },
  "homepage": "https://github.com/sosuisen/gitsync-db#readme",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.12.4",
    "@microsoft/api-extractor": "^7.13.0",
    "@types/fs-extra": "^9.0.6",
    "@types/node": "^14.14.20",
    "@types/nodegit": "^0.26.12",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "crlf": "^1.1.1",
    "eslint": "^7.17.0",
    "eslint-config-standardize": "^0.7.1",
    "eslint-plugin-prettierx": "^0.14.0",
    "fs-extra": "^9.0.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "nodegit": "^0.27.0"
  }
}
